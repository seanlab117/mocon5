<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    >

    <TableLayout
        android:id="@+id/tlSchedulePeriod"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvSnack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tlSchedule"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/tlSchedulePeriod"
        app:layout_constraintTop_toTopOf="parent"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tvMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="5"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvBreakfastMonTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="2"
                />

            <TextView
                android:id="@+id/tvBreakfastWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="1"
                />

            <TextView
                android:id="@+id/tvBreakfastThuFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="2"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvLunchMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="1"
                />
            <TextView
                android:id="@+id/tvLunchTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="1"
                />
            <TextView
                android:id="@+id/tvLunchWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="1"
                />
            <TextView
                android:id="@+id/tvLunchThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="1"
                />
            <TextView
                android:id="@+id/tvLunchFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/tvSnackMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="1"
                />
            <TextView
                android:id="@+id/tvSnackTueWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="2"
                />
            <TextView
                android:id="@+id/tvSnackThuFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_span="2"
                />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>